<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="633sp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/logo_name"
        android:textAlignment="center"
        android:textColor="@color/text_logo"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/TextPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="455dp"
        android:backgroundTint="@color/text_logo"
        android:ems="10"
        android:fontFamily="@font/abril_fatface"
        android:hint="@string/input"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="@color/text_logo"
        android:textColorHint="@color/text_logo_hint"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextPerson"
        android:layout_marginHorizontal="120sp"
        android:layout_marginBottom="400sp"
        android:backgroundTint="@color/text_logo"
        android:fontFamily="@font/abril_fatface"
        android:text="FIND"
        android:textColor="@color/text_logo_hint"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/logoSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainBtn"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/abril_fatface"
        android:textAlignment="center"
        android:textColor="@color/text_logo_hint"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/mainBtn"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>